---
import Layout from '../../layouts/Layout.astro'
export async function getStaticPaths() {
  const posts = await Astro.glob('../../tutorials/**/index.mdx')

  return posts.map((post) => {
    return {
      params: {
        demo: post.url.split('/')[post.url.split('/').length - 2] ?? ''
      }
    }
  })
}

const demo = Astro.params.demo

const { Content, frontmatter } = await import(
  `../../tutorials/${demo}/index.mdx`
)
---

<Layout title={frontmatter.title}>
  <header class="py-8 bg-charcoal-700">
    <div class="container">
      <a href="/vue" class="text-sm hover:underline">Back</a>
      <h1 class="mt-2 text-4xl font-bold text-white">{frontmatter.title}</h1>
    </div>
  </header>
  <main class="container article">
    <Content />
    <!-- post.frontmatter.title will be `string`! -->
  </main>
</Layout>
